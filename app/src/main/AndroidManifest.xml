<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juwan.orlandowaves">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityClass.Home"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityClass.LoginActivity" />
        <activity android:name=".ActivityClass.Register" />
        <activity android:name=".FirstTab" />
        <activity android:name=".ActivityClass.Profile" />
        <activity android:name=".ActivityClass.Shop" />
        <activity android:name=".ActivityClass.Tickets" />
        <activity
            android:name=".ActivityClass.FBCpush"
            android:label="@string/title_activity_fbcpush"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>