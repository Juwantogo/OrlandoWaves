<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_centerInParent="false"
        app:srcCompat="@mipmap/logo" android:contentDescription="TODO" />

    <TextView
        android:id="@+id/nameTV"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/productImage"
        android:layout_alignRight="@+id/productImage"
        android:layout_below="@+id/productImage"
        android:layout_centerInParent="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/price"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nameTV"
        android:layout_alignStart="@+id/nameTV"
        android:layout_below="@+id/nameTV"
        android:layout_centerInParent="false"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="TextView"
        android:textAlignment="center" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nameTV"
        android:layout_alignEnd="@+id/productImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/productImage"
        android:layout_centerInParent="false" />
</RelativeLayout>